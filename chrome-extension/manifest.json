{
  "manifest_version": 3,
  "name": "NEXUS - Social Intelligence",
  "version": "1.0.0",
  "description": "AI-powered social engagement assistant for B2B sales teams",
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*", "https://linkedin.com/*"],
      "js": ["content-scripts/linkedin.js"],
      "css": ["styles/nexus-inject.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content-scripts/twitter.js"],
      "css": ["styles/nexus-inject.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content-scripts/reddit.js"],
      "css": ["styles/nexus-inject.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    },
    "default_title": "NEXUS - AI Social Intelligence"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "icons/*"],
      "matches": ["https://www.linkedin.com/*", "https://twitter.com/*", "https://x.com/*", "https://www.reddit.com/*"]
    }
  ]
}
